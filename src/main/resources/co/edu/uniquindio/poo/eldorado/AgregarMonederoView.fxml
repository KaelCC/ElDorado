<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.poo.eldorado.AgregarMonederoController"
            style="-fx-background-color: #FFFFFF;">

    <children>


        <AnchorPane layoutX="50.0" layoutY="40.0"
                    prefHeight="320.0" prefWidth="500.0"
                    style="-fx-background-color: #FFFFFF;
                           -fx-border-color: #D9D9D9;
                           -fx-border-radius: 15;
                           -fx-background-radius: 15;
                           -fx-effect: dropshadow(gaussian,#C8C8C8,12,0.3,0,3);">

            <children>


                <Label layoutX="110.0" layoutY="20.0"
                       text="CREAR NUEVO MONEDERO"
                       style="-fx-text-fill: #8A6D2F;">
                    <font>
                        <Font name="Copperplate Gothic Bold" size="22.0" />
                    </font>
                </Label>


                <Label layoutX="110.0" layoutY="85.0"
                       text="Elige el tipo de monedero:"
                       style="-fx-text-fill: #6A6A6A;">
                    <font>
                        <Font name="Copperplate Gothic Bold" size="17.0" />
                    </font>
                </Label>


                <ChoiceBox fx:id="choiceTipoMonedero"
                           layoutX="110.0" layoutY="125.0"
                           prefHeight="40.0" prefWidth="280.0"
                           style="-fx-background-color: #FFFFFF;
                                  -fx-background-radius: 10;
                                  -fx-border-radius: 10;
                                  -fx-border-color: #C1A85A;
                                  -fx-border-width: 2;
                                  -fx-font-weight: bold;
                                  -fx-text-fill: #8A6D2F;" />


                <Button fx:id="btnCrearMonedero"
                        layoutX="160.0" layoutY="210.0"
                        prefHeight="45.0" prefWidth="200.0"
                        text="AGREGAR MONEDERO"
                        onAction="#AgregarMonedero"
                        style="-fx-background-color: #8A6D2F;
                               -fx-background-radius: 12;
                               -fx-border-radius: 12;
                               -fx-text-fill: white;
                               -fx-font-weight: bold;
                               -fx-font-size: 14px;" />

            </children>

        </AnchorPane>

    </children>

</AnchorPane>
