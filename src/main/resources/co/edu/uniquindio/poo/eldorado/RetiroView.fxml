<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.poo.eldorado.RetiroController">

    <children>

        <!-- CONTENEDOR CENTRAL -->
        <VBox spacing="20" layoutX="80" layoutY="40" prefWidth="440" prefHeight="320"
              style="-fx-background-color: #FFF4A6;
                     -fx-background-radius: 20;
                     -fx-padding: 25;
                     -fx-border-color: #2B2B2B;
                     -fx-border-width: 2;
                     -fx-border-radius: 20;">

            <!-- TÍTULO -->
            <Label text="RETIROS" textFill="#2B2B2B">
                <font>
                    <Font name="Copperplate Gothic Bold" size="36" />
                </font>
            </Label>

            <!-- LABEL DE MONEDERO -->
            <Label text="Seleccione el monedero:" textFill="#2B2B2B">
                <font>
                    <Font name="Copperplate Gothic Bold" size="17" />
                </font>
            </Label>

            <!-- CHOICEBOX -->
            <ChoiceBox fx:id="choiceBoxMonedero"
                       prefHeight="40" prefWidth="300"
                       style="-fx-background-color: white;
                              -fx-background-radius: 10;
                              -fx-border-radius: 10;
                              -fx-border-color: #2B2B2B;" />

            <!-- LABEL DE MONTO -->
            <Label text="Ingrese el monto a retirar:" textFill="#2B2B2B">
                <font>
                    <Font name="Copperplate Gothic Bold" size="17" />
                </font>
            </Label>

            <!-- TEXTFIELD -->
            <TextField fx:id="txtCantidadRetiro"
                       promptText="Monto a retirar"
                       prefHeight="35" prefWidth="300"
                       style="-fx-background-radius: 10;
                              -fx-border-radius: 10;
                              -fx-border-color: #2B2B2B;" />

            <!-- BOTÓN -->
            <Button fx:id="btnRetirar"
                    text="RETIRAR"
                    onAction="#Retirar"
                    prefHeight="40" prefWidth="200"
                    style="-fx-background-color: #2B2B2B;
                           -fx-text-fill: white;
                           -fx-background-radius: 12;
                           -fx-font-size: 16;">
            </Button>

        </VBox>

    </children>

</AnchorPane>
