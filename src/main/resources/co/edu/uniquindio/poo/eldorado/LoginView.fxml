<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.Pane?>


<AnchorPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.poo.eldorado.LoginController"
            style="-fx-background-color: #FFFFFF;">

    <children>


        <AnchorPane prefHeight="400.0" prefWidth="180.0"
                    style="-fx-background-color: #F5D87C; -fx-border-color: #D4B45A; -fx-border-width: 0 2 0 0;">
            <children>
                <Label layoutX="20.0" layoutY="100.0" text="¿No tienes cuenta?"
                       style="-fx-text-fill: #4A4A4A;">
                    <font>
                        <Font name="Copperplate Gothic Bold" size="13.0" />
                    </font>
                </Label>

                <Button fx:id="btnRegistrar"
                        layoutX="30.0" layoutY="140.0"
                        prefWidth="120.0" prefHeight="35.0"
                        text="REGISTRARSE"
                        onAction="#IrARegistro"
                        style="-fx-background-color: #FFFFFF;
                               -fx-background-radius: 8;
                               -fx-border-radius: 8;
                               -fx-border-color: #C1A85A;
                               -fx-border-width: 2;
                               -fx-text-fill: #8A6D2F;
                               -fx-font-weight: bold;">
                </Button>

            </children>
        </AnchorPane>



        <Label layoutX="210.0" layoutY="20.0" text="EL DORADO"
               style="-fx-text-fill: #8A6D2F;">
            <font>
                <Font name="Copperplate Gothic Bold" size="32.0" />
            </font>
        </Label>

        <Label layoutX="260.0" layoutY="70.0" text="INICIAR SESIÓN"
               style="-fx-text-fill: #4A4A4A;">
            <font>
                <Font name="Copperplate Gothic Bold" size="20.0" />
            </font>
        </Label>


        <Label layoutX="220.0" layoutY="130.0" text="EMAIL:"
               style="-fx-text-fill: #4A4A4A;">
            <font>
                <Font name="Copperplate Gothic Bold" size="16.0" />
            </font>
        </Label>

        <TextField fx:id="txtEmailIngresado"
                   layoutX="300.0" layoutY="130.0"
                   prefHeight="28.0" prefWidth="260.0"
                   promptText="Ingrese su correo"
                   style="-fx-background-color: #EFEFEF; -fx-background-radius: 8;">
        </TextField>

        <Label layoutX="200.0" layoutY="190.0" text="PASSWORD:"
               style="-fx-text-fill: #4A4A4A;">
            <font>
                <Font name="Copperplate Gothic Bold" size="16.0" />
            </font>
        </Label>

        <PasswordField fx:id="txtPasswordEntered"
                       layoutX="300.0" layoutY="190.0"
                       prefHeight="28.0" prefWidth="260.0"
                       promptText="Ingrese su contraseña"
                       style="-fx-background-color: #EFEFEF; -fx-background-radius: 8;">
        </PasswordField>


        <Button fx:id="btnLogin"
                layoutX="350.0" layoutY="270.0"
                prefHeight="40.0" prefWidth="150.0"
                text="INICIAR SESIÓN"
                onAction="#IniciarSesion"
                style="-fx-background-color: #C1A85A;
                       -fx-background-radius: 10;
                       -fx-text-fill: white;
                       -fx-font-weight: bold;">
            <font>
                <Font name="Copperplate Gothic Bold" size="14.0" />
            </font>
        </Button>

    </children>

</AnchorPane>
